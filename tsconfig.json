{
    //pediando para o compilador criar os mesmos arquivos de app, em dist só quem ao inves de type em js.
    "compilerOptions": {
        //caminho da pasta que quer ser copiada.
        "outDir": "app/dist/js",
        "target": "es6",
        //não gera os arquivos novo se o arquivo não estiver passando na compilação.
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        //torna explicito que alguns métodos podem ser null e nos obrigado a fazer a checagem e a tratar os métodos/variáveis
        "strictNullChecks": true,
        "experimentalDecorators": true,
    },

    "include": ["app/src/**/*"]

}